<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="true"/>

		<service id="theebrs_sylius.gopay.behat.context.ui.admin.managing_payment_methods" class="Sylius\Behat\Context\Ui\Admin\ManagingPaymentMethodsContext"
			decorates="sylius.behat.context.ui.admin.managing_payment_methods">
			<argument type="service" id="sylius.behat.page.admin.payment_method.create" />
			<argument type="service" id="sylius.behat.page.admin.payment_method.index" />
			<argument type="service" id="sylius.behat.page.admin.payment_method.update" />
			<argument type="service" id="sylius.behat.current_page_resolver" />
			<argument type="collection">
				<argument key="offline">Offline</argument>
				<argument key="paypal_express_checkout">Paypal Express Checkout</argument>
				<argument key="stripe_checkout">Stripe Checkout</argument>
				<argument key="gopay">GoPay</argument>
			</argument>
        </service>

		<service id="Tests\ThreeBRS\SyliusGoPayPlugin\Behat\Context\Ui\Admin\ManagingPaymentMethodsContext"
				 class="Tests\ThreeBRS\SyliusGoPayPlugin\Behat\Context\Ui\Admin\ManagingPaymentMethodsContext">
			<argument type="service" id="sylius.behat.current_page_resolver" />
			<argument type="service" id="Tests\ThreeBRS\SyliusGoPayPlugin\Behat\Pages\Admin\PaymentMethod\CreatePageInterface" />
			<argument type="service" id="Tests\ThreeBRS\SyliusGoPayPlugin\Behat\Pages\Admin\PaymentMethod\EditPageInterface" />
        </service>

		<service id="Tests\ThreeBRS\SyliusGoPayPlugin\Behat\Pages\Admin\PaymentMethod\CreatePageInterface"
				 class="Tests\ThreeBRS\SyliusGoPayPlugin\Behat\Pages\Admin\PaymentMethod\CreatePage"
				 parent="sylius.behat.page.admin.crud.create" public="false">
			<argument type="string">sylius_admin_payment_method_create</argument>
        </service>

		<service id="Tests\ThreeBRS\SyliusGoPayPlugin\Behat\Pages\Admin\PaymentMethod\EditPageInterface"
				 class="Tests\ThreeBRS\SyliusGoPayPlugin\Behat\Pages\Admin\PaymentMethod\EditPage"
				 parent="sylius.behat.page.admin.crud.update" public="false">
			<argument type="string">sylius_admin_payment_method_update</argument>
        </service>

		<service id="Tests\ThreeBRS\SyliusGoPayPlugin\Behat\Context\Setup\PaymentContext"
				 class="Tests\ThreeBRS\SyliusGoPayPlugin\Behat\Context\Setup\PaymentContext">
			<argument type="service" id="sylius.behat.shared_storage" />
			<argument type="service" id="sylius.repository.payment_method" />
			<argument type="service" id="sylius.fixture.example_factory.payment_method" />
			<argument type="service" id="sylius.manager.payment_method" />
			<argument type="collection">
				<argument key="offline">Offline</argument>
				<argument key="paypal_express_checkout">Paypal Express Checkout</argument>
				<argument key="stripe_checkout">Stripe Checkout</argument>
				<argument key="gopay">GoPay</argument>
			</argument>
		</service>


		<service id="Tests\ThreeBRS\SyliusGoPayPlugin\Behat\Context\Setup\OrderContext" class="Tests\ThreeBRS\SyliusGoPayPlugin\Behat\Context\Setup\OrderContext">
			<argument type="service" id="doctrine.orm.entity_manager" />
			<argument type="service" id="sylius_abstraction.state_machine" />
			<argument type="service" id="threebrs.gopay.payments.factory" />
			<argument type="service" id="sylius.behat.shared_storage" />
        </service>

    </services>
</container>
